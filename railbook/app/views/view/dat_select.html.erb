<%= form_for(@book) do |f| %>
  date_select: <br />
  <%= f.date_select :published, :use_month_numbers => true %><br />
  time_select: <br />
  <%= f.time_select :published %><br />
  datetime_select: <br />
  <%= f.datetime_select :published, :start_year => Time.now.year - 50, :end_year => Time.now.year %><br />
<% end %>
